{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@types": ["./src/types"],
      "@components": ["./src/components"],
      "@theme": ["./src/theme"],
      "@hooks": ["./src/hooks"],
      "@utils": ["./src/utils"],
      "@icons": ["./assets/icons"],
      "@navigation": ["./src/navigation"],
      "@features/*": ["./src/features/*"],
      "@services": ["./src/services"]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ]
}
